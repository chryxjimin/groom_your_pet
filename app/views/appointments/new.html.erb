<%= form_for([@groomer, @appointment]) do |f| %>
  <%= f.label :appointment_time %>
  <%= f.datetime_field :appointment_time %></br>
  <%= f.label :vaccination_records %>
  <%= f.check_box :vaccination_records %></br>
  <%= f.label :haircut_type %> 
  <%= f.text_field :haircut_type %></br>
  <%= f.label :pet_name %> 
  <%= f.collection_select :pet_name, Pet.all, :name, :name %></br>
  <%= f.label :groomer_id %> 
  <%= f.number_field :groomer_id %></br>
  <%= f.submit %>
<% end %>
