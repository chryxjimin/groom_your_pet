<%= form_for(@appointment) do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date %></br>
  <%= f.label :time %>
  <%= f.time_field :time %></br>
  <%= f.label :vaccination_records %>
  <%= f.check_box :vaccination_records %></br>
  <%= f.label :haircut_type %> 
  <%= f.text_field :haircut_type %></br>
  <%= f.label :pet_name %> 
  <%= f.collection_select :pet_name, Pet.all, :name, :name %></br>
  <%= f.hidden_field :groomer_id, value: current_groomer.id%>
  <%= f.submit %>
<% end %>

Groomer:  <%= current_groomer.username %></br>